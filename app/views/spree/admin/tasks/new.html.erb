<%= form_for [:admin, @object], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_task">
    <%= f.field_container :name, :class => ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => 'form-control title' %>
      <%= f.error_message_on :name %>
    <% end %>

    <div data-hook="new_task_attrs" class="row">

      <div data-hook="new_task_description" class="col-md-4">
        <%= f.field_container :description, :class => ['form-group'] do %>
          <%= f.label :description, Spree.t(:master_description) %> <span class="required">*</span>
          <%= f.text_area :description, :class => 'form-control' %>
          <%= f.error_message_on :description %>
        <% end %>
      </div>

      <div data-hook="new_task_is_available" class="col-md-4">
        <%= f.field_container :is_available, :class => ['form-group'] do %>
          <%= f.label :is_available, Spree.t(:is_available) %>
          <%= f.error_message_on :is_available %>
          <%= f.check_box :is_available, :class => 'form-control' %>
        <% end %>
      </div>

    </div>
    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.create'), 'ok', 'submit', {class: 'btn-success'} %>
    </div>
  </fieldset>
<% end %>